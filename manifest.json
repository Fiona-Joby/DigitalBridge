{
  "manifest_version": 3,
  "name": "Digital Bridge",
  "version": "1.0",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open Digital Bridge"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}